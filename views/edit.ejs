<% layout("boilerplate.ejs") -%>
<body>
   <div class="row">
      <div class="col-8 offset-2">
   <h1 class="heading">Edit Listing</h1>
   <form method="post" action="http://localhost:8080/create/<%=list.id%>?_method=PATCH" novalidate>
  <div class="form-row">
    <div class="form-group ">
      <label for="title">Title:</label>
      <input type="email" class="form-control" id="title" name="title"value=<%=list.title%> placeholder="Enter a catchy title">
    </div>
    <div class="form-group ">
      <label for="description">Description:</label><br>
      <textarea name="description" class="form-control mb-3" id="description" placeholder="Enter description"><%=list.description%></textarea>
    </div>
  </div>
  <div class="form-group">
    <label for="img">Image url:</label>
    <input type="text" class="form-control" id="img" name="image" value=<%=list.image%> placeholder="Enter image url">
     </div>
     <div class="row">
  <div class="form-group mb-3 col-md-4">
    <label for="price">Price:</label>
    <input type="number" class="form-control  " value="<%=list.price%>"name="price" id="price" placeholder="Enter price" >
  </div>
  <div class="form-group mb-3 col-md-8">
    <label for="location">Location:</label>
    <input type="text" class="form-control " value="<%=list.location%>" name="location" id="location" placeholder="Enter Location">
  </div>
    </div>
  <div class="form-row">
    <div class="form-group ">
      <label for="country">Country:</label>
      <input type="text" class="form-control" value="<%=list.country%>" id="country" name="country" placeholder="Enter your country">
    </div>
    <br>
    <div class="btnContainer">
  <button type="submit" class="btn btn-danger">Edit</button>
  </form>
</div>
</div>
</div>
